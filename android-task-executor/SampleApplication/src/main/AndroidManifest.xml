<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noveogroup.android.task.example">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:label="@string/application_name">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SimpleTaskExampleActivity"
            android:label="@string/simple_task_example_activity" />

        <activity
            android:name=".TaskSequenceExampleActivity"
            android:label="@string/task_sequence_example_activity" />

        <activity
            android:name=".TaskFailureExampleActivity"
            android:label="@string/task_failure_example_activity" />

        <activity
            android:name=".TaskPerformanceExampleActivity"
            android:label="@string/task_performance_example_activity" />

    </application>

</manifest>
